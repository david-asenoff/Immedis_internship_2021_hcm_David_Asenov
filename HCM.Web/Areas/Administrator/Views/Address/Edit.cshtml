@using HCM.Web.ViewModels.DepartmentAddress
@using HCM.Data.Common;
@model DepartmentAddressEditViewModel
@{
    ViewData["Title"] = "Edit DepartmentAddress";
    string GooglePlacesApiKey = TempData["GooglePlacesApiKey"].ToString();
}


<!-- Edit-->
<form class="form text-left"
      asp-area="Administrator"
      asp-controller="DepartmentAddress"
      asp-action="Edit"
      method="post">
    Description
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="modal-body">
        <div class="mb-3">
            <label class="text mb-0 required" asp-for="@Model.Id"></label>
            <span asp-validation-for="@Model.Id" class="text-danger"></span>
            <input name="Id" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label class="text mb-0 required" asp-for="@Model.AddressLocation"></label>
            <span asp-validation-for="@Model.AddressLocation" class="text-danger"></span>
            <input name="AddressLocation" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label class="text mb-0 required" asp-for="@Model.DepartmentName"></label>
            <span asp-validation-for="@Model.DepartmentName" class="text-danger"></span>
            <input name="DepartmentName" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label class="text mb-0 required" asp-for="@Model.CompanyName"></label>
            <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>
            <input name="CompanyName" class="form-control" readonly />
        </div>
    </div>
    <div class="modal-footer">
        <a type="button" class="btn btn-primary"
           asp-area="Administrator"
           asp-controller="DepartmentAddress"
           asp-action="Index">
            <i class="far fa-window-close"></i>
            Close
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="far fa-save"></i>
            Save changes
        </button>
    </div>
</form>

@section Scripts{
    <script src="~/js/addresesTable.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places&key=@GooglePlacesApiKey&language=en"></script>
} 