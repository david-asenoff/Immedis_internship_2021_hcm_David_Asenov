@using HCM.Web.ViewModels.Address
@using HCM.Data.Common;
@model AddressViewModel
@{
    ViewData["Title"] = "Add Address";
    string GooglePlacesApiKey = TempData["GooglePlacesApiKey"].ToString();
}


<!-- Add-->
<form class="form text-left"
      asp-area=@GlobalConstants.AdministratorRoleName
      asp-controller="Address"
      asp-action="Add"
      method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="modal-body">
        <div class="mb-3">
            <label class="text mb-0 required" asp-for="@Model.Location"></label>
            <span asp-validation-for="@Model.Location" class="text-danger"></span>
            <textarea asp-for="@Model.Location" class="form-control"
                      placeholder="Varna, Varna, Bulgaria"
                      rows="3"
                      id="search_input"></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <a type="button" class="btn btn-primary"
           asp-area=@GlobalConstants.AdministratorRoleName
           asp-controller="Address"
           asp-action="Index">
            <i class="far fa-window-close"></i>
            Close
        </a>
        <button type="submit" class="btn btn-dark">
            <i class="fas fa-plus"></i>
            Add
        </button>
    </div>
</form>
@section Scripts{
    <script src="~/js/addresesTable.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places&key=@GooglePlacesApiKey&language=en"></script>
} 